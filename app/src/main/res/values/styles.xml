<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BasicListStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:padding">@dimen/textBoxPadding</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/textBoxTextSize</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="RegularToolbarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundColor">?attr/colorBackgroundFloating</item>
        <item name="android:background">?attr/colorBackgroundFloating</item>
    </style>

    <style name="RegularToolbar" parent="RegularToolbarLayout">
        <item name="android:minHeight">@dimen/toolbar_minimum_height</item>
        <item name="navigationIcon">@drawable/arrow_left</item>
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
        <item name="android:titleTextColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="BackgroundLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/colorBackgroundFloating</item>
        <item name="backgroundColor">?attr/colorBackgroundFloating</item>
    </style>

    <style name="BackgroundLinearLayout" parent="BackgroundLayout">
        <item name="android:gravity">top</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/mainButtonTextSize</item>
        <item name="cornerRadius">@dimen/buttonRadius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/mainIconPadding</item>
        <item name="iconSize">@dimen/mainIconSize</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textFontWeight">500</item>

    </style>

    <style name="Searchlayout">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>

        <item name="boxBackgroundColor">?attr/search_background</item>

        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="startIconDrawable">@drawable/loupe</item>
        <item name="startIconTint">?attr/search_hint_color</item>
        <item name="endIconDrawable">@drawable/cancel</item>
        <item name="endIconTint">?attr/search_hint_color</item>
        <item name="endIconMode">custom</item>

    </style>


    <style name="SearchTextInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/search_text_color</item>
        <item name="android:textColorHint">?attr/search_hint_color</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">@dimen/textBoxTextSize</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>
</resources>