<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.PlayListMaker" parent="">
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="backgroundColor">?attr/main_background_color</item>
        <item name="android:background">?attr/main_background_color</item>

    </style>

        <style name="Widget.PlayListMaker.MainActivity">
            <item name="backgroundColor">?attr/colorSecondary</item>
            <item name="android:background">?attr/colorSecondary</item>
            <item name="android:textColor">?attr/colorOnSecondary</item>
            <item name="android:fontFamily">@font/ys_text_medium</item>
            <item name="android:textFontWeight">500</item>
            <item name="android:textSize">22sp</item>
        </style>

            <style name="Widget.PlayListMaker.MainActivity.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
                <item name="android:backgroundTint">@color/white</item>
                <item name="android:textAllCaps">false</item>
                <item name="android:textColor">@color/yp_black</item>
                <item name="cornerRadius">16dp</item>
                <item name="iconGravity">textStart</item>
                <item name="iconPadding">8dp</item>
                <item name="iconSize">24dp</item>
                <item name="iconTint">@color/yp_black</item>
                <item name="android:fontFamily">@font/ys_text_medium</item>
                <item name="android:textFontWeight">500</item>
                <item name="android:textSize">22sp</item>
            </style>

        <style name="Widget.PlayListMaker.CommonActivity">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">match_parent</item>
        </style>

            <style name="Widget.PlayListMaker.CommonActivity.Toolbar">
                <item name="android:layout_width">match_parent</item>
                <item name="android:layout_height">wrap_content</item>
                <item name="android:minHeight">56dp</item>
                <item name="navigationIcon">@drawable/arrow_left</item>
                <item name="navigationIconTint">?attr/colorOnPrimary</item>
                <item name="android:titleTextColor">?attr/colorOnPrimary</item>
                <item name="android:fontFamily">@font/ys_text_medium</item>
                <item name="android:textFontWeight">500</item>
                <item name="android:textSize">22sp</item>
            </style>

            <style name="Widget.PlayListMaker.SearchWidget">
                <item name="boxBackgroundColor">?attr/search_background</item>
                <item name="boxCornerRadiusTopStart">8dp</item>
                <item name="boxCornerRadiusTopEnd">8dp</item>
                <item name="boxCornerRadiusBottomStart">8dp</item>
                <item name="boxCornerRadiusBottomEnd">8dp</item>
                <item name="boxStrokeWidth">0dp</item>
                <item name="boxStrokeWidthFocused">0dp</item>
                <item name="hintEnabled">false</item>
                <item name="startIconDrawable">@drawable/loupe</item>
                <item name="startIconTint">?attr/search_hint_color</item>
                <item name="endIconDrawable">@drawable/cancel</item>
                <item name="endIconTint">?attr/search_hint_color</item>
                <item name="endIconMode">custom</item>
            </style>

                <style name="Widget.PlayListMaker.SearchWidget.Input">
                    <item name="android:textColor">?attr/search_text_color</item>
                    <item name="android:textColorHint">?attr/search_hint_color</item>
                    <item name="android:background"/>
                </style>

            <style name="Widget.PlayListMaker.Track">
                <item name="android:tint">?attr/track_description_color</item>
                <item name="android:lines">1</item>
                <item name="android:ellipsize">end</item>
            </style>

            <style name="Widget.PlayListMaker.Track.Name">
                <item name="android:textSize">16sp</item>
            </style>

            <style name="Widget.PlayListMaker.Track.Description">
                <item name="android:textSize">11sp</item>
                <item name="android:textColor">?attr/track_description_color</item>
            </style>

    <style name="Widget.PlayListMaker.SettingsItem">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_gravity">left|center_vertical</item>
            <item name="android:padding">18dp</item>
        </style>

</resources>