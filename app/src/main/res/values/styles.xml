<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.PlayListMaker" parent="">
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="backgroundColor">?attr/main_background_color</item>
        <item name="android:background">?attr/main_background_color</item>
        <item name="android:indeterminateTint">@color/yp_blue</item>
    </style>

    <style name="Widget.PlayListMaker.Playlists">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.PlayListMaker.BottomPlaylists">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.PlayListMaker.BottomPlaylists.Count">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">?attr/hint_color</item>
    </style>

    <style name="Widget.PlayListMaker.MainBottomNavigator" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemBackground">?attr/main_background_color</item>

    </style>

    <style name="BottomNavigationText" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextFieldLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">?attr/colorOnSurface</item>
    </style>

    <style name="TextFieldLayout.Field">
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.PlayListMaker.TabLayout">
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">14sp</item>
        <item name="tabIndicatorColor">?attr/colorOnPrimary</item>
        <item name="tabTextColor">?attr/colorOnPrimary</item>
        <item name="tabIndicatorFullWidth">true</item>
    </style>

    <style name="Widget.PlayListMaker.ProgressBar">
            <item name="android:backgroundTint">@color/transparent</item>
        </style>

        <style name="Widget.PlayListMaker.MainActivity">
            <item name="backgroundColor">?attr/colorOnSecondary</item>
            <item name="android:background">?attr/colorOnSecondary</item>
            <item name="android:textColor">?attr/colorOnSecondary</item>
            <item name="android:fontFamily">@font/ys_text_medium</item>
            <item name="android:textFontWeight">500</item>
            <item name="android:textSize">22sp</item>
        </style>

            <style name="Widget.PlayListMaker.MainActivity.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
                <item name="android:backgroundTint">@color/white</item>
                <item name="android:textAllCaps">false</item>
                <item name="android:textColor">@color/yp_black</item>
                <item name="cornerRadius">16dp</item>
                <item name="iconGravity">textStart</item>
                <item name="iconPadding">8dp</item>
                <item name="iconSize">24dp</item>
                <item name="iconTint">@color/yp_black</item>
                <item name="android:fontFamily">@font/ys_text_medium</item>
                <item name="android:textFontWeight">500</item>
                <item name="android:textSize">22sp</item>
                <item name="android:layout_width">match_parent</item>
                <item name="android:layout_height">0dp</item>
                <item name="android:layout_marginBottom">16dp</item>
                <item name="android:layout_weight">1</item>
            </style>

        <style name="Widget.PlayListMaker.CommonActivity">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">match_parent</item>
        </style>

            <style name="Widget.PlayListMaker.CommonActivity.Toolbar">
                <item name="android:layout_width">match_parent</item>
                <item name="android:layout_height">56dp</item>
                <item name="android:titleTextColor">?attr/colorOnPrimary</item>
                <item name="navigationIconTint">?attr/colorOnPrimary</item>
                <item name="android:fontFamily">@font/ys_text_medium</item>
                <item name="android:textFontWeight">500</item>
                <item name="android:textSize">22sp</item>
            </style>

            <style name="Widget.PlayListMaker.SearchWidget">
                <item name="boxBackgroundColor">?attr/search_background</item>
                <item name="boxCornerRadiusTopStart">8dp</item>
                <item name="boxCornerRadiusTopEnd">8dp</item>
                <item name="boxCornerRadiusBottomStart">8dp</item>
                <item name="boxCornerRadiusBottomEnd">8dp</item>
                <item name="boxStrokeWidth">0dp</item>
                <item name="boxStrokeWidthFocused">0dp</item>
                <item name="hintEnabled">false</item>
                <item name="startIconDrawable">@drawable/loupe</item>
                <item name="startIconTint">?attr/search_hint_color</item>
                <item name="endIconDrawable">@drawable/cancel</item>
                <item name="endIconTint">?attr/search_hint_color</item>
                <item name="endIconMode">custom</item>
            </style>

                <style name="Widget.PlayListMaker.SearchWidget.Input">
                    <item name="android:textColor">?attr/search_text_color</item>
                    <item name="android:textColorHint">?attr/search_hint_color</item>
                    <item name="android:background"/>
                </style>

            <style name="Widget.PlayListMaker.MainText">
                <item name="android:fontFamily">@font/ys_text_medium</item>
                <item name="android:textSize">19sp</item>
                <item name="android:padding">@dimen/margin_l</item>
                <item name="android:layout_width">wrap_content</item>
                <item name="android:layout_height">wrap_content</item>
                <item name="android:layout_marginHorizontal">@dimen/margin_xl</item>
            </style>

            <style name="Widget.PlayListMaker.SearchUpdateButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
                <item name="backgroundTint">?attr/colorOnPrimary</item>
                <item name="cornerRadius">54dp</item>
                <item name="android:textAllCaps">false</item>
                <item name="android:fontFamily">@font/ys_text_medium</item>
                <item name="android:textSize">14sp</item>
                <item name="android:textFontWeight">400</item>
                <item name="android:textColor">?attr/main_background_color</item>
            </style>

            <style name="Widget.PlayListMaker.Track">
                <item name="android:tint">?attr/track_description_color</item>
                <item name="android:lines">1</item>
                <item name="android:ellipsize">end</item>
            </style>

            <style name="Widget.PlayListMaker.Track.Name">
                <item name="android:textSize">16sp</item>
            </style>

            <style name="Widget.PlayListMaker.Track.Description">
                <item name="android:textSize">11sp</item>
                <item name="android:textColor">?attr/track_description_color</item>
            </style>

    <style name="Widget.PlayListMaker.Player">
        <item name="android:textSize">13sp</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Widget.PlayListMaker.Player.MainButton">
        <item name="android:tint">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.PlayListMaker.Player.SecondaryButton">
<!--        <item name="android:tint">@color/yp_gray</item>-->
    </style>

    <style name="Widget.PlayListMaker.Player.Title1">
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Widget.PlayListMaker.Player.Title2">
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.PlayListMaker.Player.Caption">
        <item name="android:textColor">@color/yp_gray</item>
    </style>

    <style name="Widget.PlayListMaker.Player.Value">
        <item name="android:gravity">end</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Widget.PlayListMaker.Playlist">
        <item name="android:textSize">18sp</item>
        <item name="android:lines">1</item>
        <item name="android:tint">@color/yp_black</item>
        <item name="android:background">@color/yp_super_light_gray</item>
    </style>

    <style name="Widget.PlayListMaker.Playlist.CollapsingToolbar">
        <item name="android:minHeight">56dp</item>
        <item name="android:layout_height">360dp</item>
        <item name="contentScrim">@color/yp_super_light_gray</item>
        <item name="scrimAnimationDuration">100</item>
    </style>

    <style name="Widget.PlayListMaker.Playlist.Title1">
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.PlayListMaker.SettingsItem">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_gravity">left|center_vertical</item>
            <item name="android:padding">18dp</item>
        </style>

</resources>