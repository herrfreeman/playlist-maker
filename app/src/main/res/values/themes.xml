<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">

        //Don't change. It's only way to set text edit cursor color
        <item name="colorPrimary">@color/yp_black</item>
        <item name="main_background_color">@color/white</item>
        <item name="colorOnPrimary">@color/yp_black</item>
        <item name="colorSecondary">@color/yp_blue</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="search_background">@color/yp_light_gray</item>
        <item name="search_hint_color">@color/yp_gray</item>
        <item name="search_text_color">@color/yp_black</item>

        <item name="android:statusBarColor">?attr/colorBackgroundFloating</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">?attr/colorBackgroundFloating</item>
    </style>

    <style name="Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker" />

    <style name="Theme.PlaylistMaker.MainActivity" parent="Theme.PlaylistMaker">
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">?attr/colorSecondary</item>
    </style>

</resources>