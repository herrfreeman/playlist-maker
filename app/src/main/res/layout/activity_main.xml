<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    style="@style/BackgroundLinearLayout"
    android:background="?attr/colorSecondary"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="@string/app_title"
        android:textColor="@color/white"
        android:textSize="@dimen/mainButtonTextSize"
        android:paddingTop="14dp"
        android:paddingStart="16dp"
        android:layout_marginBottom="24dp"
        android:background="?attr/colorSecondary"/>

    <LinearLayout
        style="@style/BackgroundLinearLayout"
        android:gravity="center"
        android:padding="16dp"
        android:background="?attr/colorSecondary">

        <Button
            style="@style/ButtonStyle"
            android:id="@+id/search_button"
            android:text="@string/search_btn_title"
            app:icon="@drawable/loupe"/>

        <Button
            style="@style/ButtonStyle"
            android:id="@+id/media_button"
            android:text="@string/media_btn_title"
            app:icon="@drawable/notepack"/>

        <Button
            style="@style/ButtonStyle"
            android:id="@+id/settings_button"
            android:text="@string/settings_btn_title"
            app:icon="@drawable/gear"/>

    </LinearLayout>
</LinearLayout>