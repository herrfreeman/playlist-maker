<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yp_blue"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="@string/app_title"
        android:textColor="@color/white"
        android:textSize="@dimen/mainButtonTextSize"
        android:paddingTop="14dp"
        android:paddingStart="16dp"
        android:layout_marginBottom="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/search_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/search_btn_title"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/mainButtonTextSize"
            app:cornerRadius="@dimen/buttonRadius"
            app:icon="@drawable/loupe"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/mainIconPadding"
            app:iconSize="@dimen/mainIconSize"
            app:iconTint="@color/black" />

        <Button
            android:id="@+id/media_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/media_btn_title"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/mainButtonTextSize"
            app:cornerRadius="@dimen/buttonRadius"
            app:icon="@drawable/notepack"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/mainIconPadding"
            app:iconSize="@dimen/mainIconSize"
            app:iconTint="@color/black" />

        <Button
            android:id="@+id/settings_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/settings_btn_title"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/mainButtonTextSize"
            app:cornerRadius="@dimen/buttonRadius"
            app:icon="@drawable/gear"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/mainIconPadding"
            app:iconSize="@dimen/mainIconSize"
            app:iconTint="@color/black" />

    </LinearLayout>
</LinearLayout>