<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="top"
    android:orientation="vertical"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"     >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:padding="12dp"
            android:src="@drawable/arrow_left"
            app:tint="@color/yp_black" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"


            android:text="@string/settings_title"
            android:textColor="@color/yp_black"
            android:textSize="22sp" />



    </LinearLayout>


    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="18dp"
        android:paddingLeft="18dp"
        android:paddingRight="5dp"
        android:text="@string/darktheme_switch"
        android:textColor="@color/yp_black"
        android:textSize="16sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share_application"
            android:textColor="@color/yp_black"
            android:textSize="16sp"
            android:padding="18dp"
            android:layout_gravity="left|center_vertical"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="12dp"
            android:src="@drawable/graph"
            app:tint="@color/yp_gray" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/write_to_support"
            android:textColor="@color/yp_black"
            android:textSize="16sp"
            android:padding="18dp"
            android:layout_gravity="left|center_vertical"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="12dp"
            android:src="@drawable/caller"
            app:tint="@color/yp_gray" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/license_agreement"
            android:textColor="@color/yp_black"
            android:textSize="16sp"
            android:padding="18dp"
            android:layout_gravity="left|center_vertical"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="12dp"
            android:src="@drawable/smallarrow_right"
            app:tint="@color/yp_gray" />
    </FrameLayout>


</LinearLayout>